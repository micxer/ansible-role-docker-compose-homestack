{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "dependencyDashboard": true,
  "extends": [
    "config:recommended",
    "config:best-practices"
  ],
  "separateMultipleMajor": true,
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/main\\.yml/"
      ],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\n.+:\\s?(?<currentValue>[\\w+\\.\\-]*)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/templates/docker-compose-.*\\.yml\\.j2$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*(?:versioning=(?<versioning>\\S+))?\\s*\\n\\s*image:\\s*(?<depName>[^:]+):(?<currentValue>[^\\s]+)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "nextcloud"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
